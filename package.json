{
  "name": "graphs-all",
  "version": "1.1.2",
  "description": "Graph Data Structure Library",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "mocha src/index.test.js -w",
    "test:single": "mocha src/index.test.js",
    "coverage": "istanbul cover -x *.test.js _mocha -- -R spec src/index.test.js",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bryukh/graphs.git"
  },
  "keywords": [
    "graph",
    "datastructure"
  ],
  "author": "Valentin Bryukhanov (http://bryukh.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Bryukh/graphs/issues"
  },
  "homepage": "https://github.com/Bryukh/graphs#readme",
  "devDependencies": {
    "chai": "^3.3.0",
    "codecov.io": "^0.1.6",
    "commitizen": "^1.0.4",
    "cz-conventional-changelog": "^1.1.2",
    "ghooks": "^0.3.2",
    "istanbul": "^0.3.21",
    "mocha": "^2.3.3",
    "semantic-release": "^4.3.5"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run coverage"
    }
  },
  "dependencies": {
    "codecov.io": "^0.1.6",
    "chai": "^3.3.0",
    "commitizen": "^1.0.4",
    "cz-conventional-changelog": "^1.1.2",
    "ghooks": "^0.3.2",
    "test": "^0.6.0",
    "istanbul": "^0.3.21"
  }
}
